<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Qing_Box" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorGradientTop</item>
        <item name="colorOnPrimary">@color/colorBlack</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorGreen</item>
        <item name="colorSecondaryVariant">@color/colorGreen</item>
        <item name="colorOnSecondary">@color/colorWhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Tools.FullScreen" parent="Theme.Design.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Qing_Box.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tools.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="Theme.Tools.PopupOverlay" parent="Widget.AppCompat.PopupMenu.Overflow" />

</resources>